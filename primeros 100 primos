<?php

// Función para verificar si un número es primo
function esPrimo($n) {
    // Los números menores o iguales a 1 no son primos
    if ($n <= 1) {
        return false;
    }

    // Revisar divisores desde 2 hasta la raíz cuadrada de $n
    for ($i = 2; $i <= sqrt($n); $i++) {
        // Si $n es divisible por $i, no es primo
        if ($n % $i === 0) {
            return false;
        }
    }

    // Si no encontró divisores, es primo
    return true;
}

// Imprimir números primos entre 1 y 100
for ($num = 1; $num <= 100; $num++) {
    if (esPrimo($num)) {
        echo $num . "<br>";
    }
}




python

# Función para verificar si un número es primo
def es_primo(n):
    # Los números menores o iguales a 1 no son primos
    if n <= 1:
        return False

    # Revisar divisores desde 2 hasta la raíz cuadrada de n (inclusive)
    for i in range(2, int(n**0.5) + 1):
        # Si n es divisible por i, no es primo
        if n % i == 0:
            return False

    # Si no encontró divisores, es primo
    return True

# Imprimir números primos entre 1 y 100
for num in range(1, 101):
    if es_primo(num):
        print(num)



JS
// Función para verificar si un número es primo
function esPrimo(n) {
    // Los números menores o iguales a 1 no son primos
    if (n <= 1) return false;

    // Revisar divisores desde 2 hasta la raíz cuadrada de n
    for (let i = 2; i <= Math.sqrt(n); i++) {
        // Si n es divisible por i, no es primo
        if (n % i === 0) return false;
    }

    // Si no encontró divisores, es primo
    return true;
}

// Imprimir números primos entre 1 y 100
for (let num = 1; num <= 100; num++) {
    if (esPrimo(num)) {
        console.log(num);
    }
}


<?php

function sonAnagramas($palabra1, $palabra2) {
    // Si son exactamente iguales, no son anagramas
    if ($palabra1 === $palabra2) return false;

    // Convertimos a minúsculas y dividimos en arrays de caracteres
    $letras1 = str_split(strtolower($palabra1));
    $letras2 = str_split(strtolower($palabra2));

    // Ordenamos ambos arrays
    sort($letras1);
    sort($letras2);

    // Comparamos los arrays ordenados
    return $letras1 === $letras2;
}

// Ejemplo
var_dump(sonAnagramas("roma", "amor")); // true
var_dump(sonAnagramas("roma", "roma")); // false




python

def son_anagramas(palabra1: str, palabra2: str) -> bool:
    # Si son exactamente iguales, no son anagramas
    if palabra1 == palabra2:
        return False

    # Ordenamos ambas palabras en minúsculas
    return sorted(palabra1.lower()) == sorted(palabra2.lower())

# Ejemplo
print(son_anagramas("roma", "amor"))  # True
print(son_anagramas("roma", "roma"))  # False


JS

function sonAnagramas(palabra1, palabra2) {
    // Si son exactamente iguales, no son anagramas
    if (palabra1 === palabra2) return false;

    // Convertimos a minúsculas, dividimos y ordenamos
    const ordenada1 = palabra1.toLowerCase().split('').sort().join('');
    const ordenada2 = palabra2.toLowerCase().split('').sort().join('');

    // Comparamos las palabras ordenadas
    return ordenada1 === ordenada2;
}

// Ejemplo
console.log(sonAnagramas("roma", "amor")); // true
console.log(sonAnagramas("roma", "roma")); // false



